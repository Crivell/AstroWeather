<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="#ffFF00"
              android:orientation="vertical"
              android:padding="16dp">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textB"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OK" android:id="@+id/butB"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tex"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/co" android:text="Cofnij do menu"/>
</LinearLayout>